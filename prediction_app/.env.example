# 数据库配置
# PostgreSQL 数据库连接信息

# JDBC 格式（Java/Spring Boot 使用）
DATABASE_JDBC_URL=jdbc:postgresql://your-host:5432/your-database
DATABASE_DRIVER_CLASS=org.postgresql.Driver

# Python 格式（SQLAlchemy/psycopg2 使用）
DATABASE_URL=postgresql://username:password@host:port/database

# 数据库连接组件（分别存储，便于灵活使用）
DB_HOST=your-host
DB_PORT=5432
DB_NAME=your-database
DB_USER=your-username
DB_PASSWORD=your-password

# API 服务配置
PORT=8000

# 模型路径配置
MODELS_DIR=training/models
DEPLOYED_MODELS_DIR=api/deployed_models
